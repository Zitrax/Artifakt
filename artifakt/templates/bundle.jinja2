<!DOCTYPE html>
<html lang="{{ request.locale_name }}">
<head>
    {% include 'head.jinja2' %}
    <title>Bundle {{ bundle.sha1 }}</title>
    <script src="/js/artifact.js"></script>
</head>
<body>
{% include 'navbar.jinja2' %}
<div class="container">
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 id="bundlename" class="panel-title"><b>
                <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>&nbsp;
                {{ bundle.filename or bundle.sha1 }}</b></h3>
        </div>
        <table class="table table-striped table-hover table-condensed">
            <tr>
                <th>Filename</th>
                <th>SHA1</th>
                <th>Created</th>
                <th>Comment</th>
            </tr>
            {% for artifact in bundle.artifacts %}
                <tr>
                    <td><a href="/artifact/{{ artifact.sha1 }}">{{ artifact.filename }}</a></td>
                    <td><code>{{ artifact.sha1 }}</code></td>
                    <td>{{ artifact.created }}</td>
                    <td>{{ artifact.comment }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
</div>
</body>